# ============================================
# ARC SPATIAL - Environment Variables
# Autonomous Robotics Control Platform
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# DATABASE (Required)
# ============================================
# SQLite (development - default):
DATABASE_URL="file:./db/arcspatial.db"
DIRECT_URL="file:./db/arcspatial.db"
#
# PostgreSQL (production):
# DATABASE_URL="postgres://user:password@host:5432/xxxxxx?sslmode=require"
# DIRECT_URL="postgres://user:password@host:5432/xxxxxx?sslmode=require"

# ============================================
# AUTHENTICATION
# ============================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# ============================================
# AI - GOOGLE GEMINI (Required for AI features)
# ============================================
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY="your-gemini-api-key-here"
GOOGLE_AI_API_KEY="your-gemini-api-key-here"
GEMINI_MODEL="gemini-2.0-flash"

# ============================================
# AI - Z.AI LLM (Optional - backup AI)
# ============================================
ZAI_API_KEY="your-zai-api-key-here"
ZAI_API_URL="https://api.z.ai/api/paas/v4/chat/completions"
ZAI_MODEL="glm-4.7-flash"

# ============================================
# WEBSOCKET SIMULATION SERVER
# ============================================
SIMULATION_WS_PORT="3003"
SIMULATION_TICK_RATE="60"

# ============================================
# APPLICATION (development or production)
# ============================================
NODE_ENV="development"
NEXT_PUBLIC_APP_NAME="ARC SPATIAL"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# WebSocket URL for client (auto-detected by src/lib/websocket-url.ts)
# Development: http://localhost:3003
# Codespaces:  auto-detected from hostname (replaces port to 3003)
# Production:  https://your-domain.com (nginx proxies /socket.io/ to port 3003)
NEXT_PUBLIC_WS_URL="http://localhost:3003"
NEXT_PUBLIC_WS_PORT="3003"

# ============================================
# REST API ENDPOINTS (auto-available, no config needed)
# ============================================
# Development:
#   GET http://localhost:3000/api/ws-status     → Full simulation status (via Next.js)
#   GET http://localhost:3003/api/status         → Full simulation status (direct)
#   GET http://localhost:3003/health             → Basic health check
#
# Production (via nginx):
#   GET https://your-domain.com/api/ws-status   → Full simulation status
#   GET https://your-domain.com/ws-health       → Full simulation status (nginx direct)

# ROS 2 Bridge (optional - for Gazebo/Isaac Sim integration)
ROS_BRIDGE_URL="ws://localhost:9090"
GAZEBO_URL="http://localhost:11345"
